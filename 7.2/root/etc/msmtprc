#set default values for all following accounts.
defaults
tls            off
tls_trust_file    /etc/pki/tls/certs/ca-bundle.crt
syslog         on
# AVSIM
account        avsim
host           smtp.avsim.local
domain         avsim.com
auto_from      on
maildomain     avsim.com
# Set a default account
account default : avsim